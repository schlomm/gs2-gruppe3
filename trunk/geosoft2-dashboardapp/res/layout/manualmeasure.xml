<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/app_name"
        android:textSize="32dp"
        android:textStyle="bold"
        android:typeface="serif" >
    </TextView>

    <View
        android:id="@+id/dashboardline"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dashboardTitle"
        android:layout_marginTop="4dp"
        android:background="@color/geosoft2grey" >
    </View>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dashboardTitle"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/dashboardTitle"
        android:text=":Manual measurement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="serif" />

    <LinearLayout android:layout_below="@id/dashboardline" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
    
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:onClick="onClick">
    </SurfaceView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/dashboard_exit">
    </ImageView>

    <RatingBar
        android:id="@+id/manRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="2.5"
        android:stepSize="0.5" />


    <TextView
        android:id="@+id/manDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/manDescriptionEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="2"
        android:hint="type Description here" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/manSubmitBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Submit" />
</LinearLayout>
</RelativeLayout>